

<h1>New Project </h1>

<%= form_for @project do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%=f.text_area :description %>
  </div>

  <div class="field">
    <%=f.label :funding_goal %>
    <%=f.number_field :funding_goal %>
  </div>

  <div class="field">
    <%= f.label :start_date %>
    <%= f.date_field :start_date %>
  </div>

  <div class="field">
    <%= f.label :end_date %>
    <%= f.date_field :end_date %>
  </div>


  <h2>Rewards</h2>
    <div id="rewards">
      <%= f.fields_for :rewards do |reward_fields| %>
        <%= render "reward_fields", f: reward_fields %>
      <% end %>

      <div class="links">
        <%= link_to_add_association "Add Reward", f, :rewards %>
      </div>
    </div>


  <div class="field">
    <%= f.submit %>
  </div>

<% end %>
