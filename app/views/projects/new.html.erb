<h1>New Project </h1>

<%= form_for @project do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%=f.text_area :description %>
  </div>

  <div class="field">
    <%=f.label :funding_goal %>
    <%=f.number_field :funding_goal %>
  </div>

  <div class="field">
    <%= f.label :start_date %>
    <%= f.date_field :start_date %>
  </div>

  <div class="field">
    <%= f.label :end_date %>
    <%= f.date_field :end_date %>
  </div>

    <%= f.fields_for :reward, Reward.new do |rewards_fields| %>

     <%= render :partial => 'rewards_fields', locals: { rewards_fields: rewards_fields } %>
    <% end %>

  <div class="field">
    <%= f.submit %>
  </div>

<% end %>
